{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
