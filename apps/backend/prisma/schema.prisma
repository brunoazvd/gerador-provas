generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senhaHash String
  provas    Prova[]
  criadoEm  DateTime @default(now())
}

model Prova {
  id            Int            @id @default(autoincrement())
  titulo        String
  cabecalhoJson Json? // Nome da escola, professor, etc.
  valorTotal    Int?
  criadoEm      DateTime       @default(now())
  usuarioId     Int
  usuario       Usuario        @relation(fields: [usuarioId], references: [id])
  questoes      ProvaQuestao[]
}

model Questao {
  id           Int            @id @default(autoincrement())
  disciplina   String
  tema         String?
  enunciado    String
  alternativas Json? // caso seja múltipla escolha
  resposta     String?
  dificuldade  String // fácil, médio, difícil
  tags         String[]
  criadoEm     DateTime       @default(now())
  provas       ProvaQuestao[]
}

model ProvaQuestao {
  id        Int     @id @default(autoincrement())
  provaId   Int
  questaoId Int
  ordem     Int
  prova     Prova   @relation(fields: [provaId], references: [id])
  questao   Questao @relation(fields: [questaoId], references: [id])
}
